<div class="flex flex-col items-center gap-8">

<h1 class="text-center text-blue text-4 lg:text-5 xl:text-6 font-heading">Manage your domains</h1>

<div class="grid grid-cols-1 gap-8 lg:grid-cols-3 xl:grid-cols-3">
  <% @domains.each do |domain| %>
    <a href="<%= domain_path(domain) %>" class="flex flex-col p-4 items-start gap-[1.375rem] bg-text text-black shadow-md rounded-2xl">
      <h2 class="leading-none text-3 font-body">
        <%= domain.host + "." + ENV["DOMAIN"] %>
      </h2>
      <div class="flex flex-col items-start gap-2">
        <!-- TODO: records - this is just placeholder for now -->
        <div class="flex flex-row items-center gap-2">
          <span class="chip-blue">CNAME</span>
          <span class="leading-none text-1">@ → fizzbuzz.github.io</span>
        </div>
        <div class="flex flex-row items-center gap-2">
          <span class="chip-blue">MX</span>
          <span class="leading-none text-1">@ → aspmx.l.google.com</span>
        </div>
        <div class="flex flex-row items-center gap-2">
          <span class="chip-blue">A</span>
          <span class="leading-none text-1">foo. → 69.42.0.231</span>
        </div>
      </div>
      <div class="flex flex-row content-between gap-2">
        <span class="px-2 py-0.5 bg-pink rounded uppercase">Live</span>
      </div>
    </a>
  <% end %>
  <% if @user.admin? %>
      <%= form_with url: new_domain_path, method: :post do |form| %>
        <div class="flex flex-col gap-2 p-4 shadow-md rounded-2xl admin">
          <%= form.label :host, "Host:" %>
          <%= form.text_field :host %>
          <%= form.submit "Create domain" %>
        </div>
      <% end %>
  <% end %>
</div>


